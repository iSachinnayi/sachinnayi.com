---
import BaseLayout from '../layouts/BaseLayout.astro';

const currentProjects = [
  {
    title: 'Mindjek Technologies LLP',
    role: 'Co-Founder',
    year: '2024–Present',
    description: 'A digital marketing company focused on helping businesses grow online. We offer SEO, content strategy, and digital marketing services. Currently building scalable SaaS products under this umbrella.',
    tags: ['Digital Marketing', 'SEO', 'SaaS'],
    status: 'Active',
    link: null
  },
  {
    title: 'TradersGuide.online',
    role: 'Founder',
    year: '2024',
    description: 'A SaaS product focused on TradingView indicators. Built as part of the Mindjek portfolio to explore the intersection of finance and digital products.',
    tags: ['SaaS', 'TradingView', 'Product'],
    status: 'Live',
    link: 'https://tradersguide.online/'
  },
  {
    title: 'NoAutoRenew.com',
    role: 'Founder',
    year: '2025',
    description: 'An AI-first SaaS project exploring pure AI-assisted product development workflows. Currently in development using modern AI tools like GPT, DeepSeek, and Cursor.',
    tags: ['SaaS', 'AI', 'Product'],
    status: 'Building',
    link: 'https://noautorenew.com/'
  },
  {
    title: 'Phantom Rent A Car',
    role: 'SEO Specialist',
    year: '2024–Present',
    description: 'Remote SEO role handling organic growth strategy, technical optimization, and performance tracking for a competitive automotive rental market.',
    tags: ['SEO', 'Automotive', 'Remote'],
    status: 'Current',
    link: 'https://phantomrentcar.com/'
  },
  {
    title: 'ModemUnlock4U',
    role: 'Creator',
    year: '2012',
    description: 'My first website—a Blogspot site documenting modem unlocking solutions. Still live today as a reminder of where it all started.',
    tags: ['Blogspot', 'Tutorial', 'Archive'],
    status: 'Archive',
    link: 'https://modemunlock4u.blogspot.com/'
  }
];

const pastProjects = [
  {
    title: 'DescargarAndroidApks.com',
    description: 'A multilingual Android applications blog targeting multiple languages and geographies. Deep dive into international SEO and content localization.',
    outcome: 'Successfully exited',
    year: '2018'
  },
  {
    title: 'Locus010.nl',
    description: 'A Dutch Amazon affiliate website built on WordPress with automation for pulling and displaying products dynamically.',
    outcome: 'Successfully exited',
    year: '2019–2022'
  },
  {
    title: 'Techuhow.com',
    description: 'Technology tutorials and how-to guides platform. My first WordPress site with custom domain, monetized through Google AdSense.',
    outcome: 'Successfully exited',
    year: '2015–2018'
  }
];
---

<BaseLayout 
  title="Work & Projects of Sachin Nayi" 
  description="Explore the projects and work by Sachin Nayi - SaaS products, SEO consulting, and digital marketing projects."
>
  <!-- Header Section -->
  <section class="pt-32 pb-12 lg:pt-40 lg:pb-16 bg-cream-100">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <div class="max-w-3xl">
        <p class="text-copper-600 font-semibold text-xs uppercase tracking-[0.2em] mb-3 animate-fade-up">Work</p>
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-900 mb-6 leading-tight animate-fade-up" style="animation-delay: 0.1s;">
          Things I've built & worked on
        </h1>
        <p class="text-lg text-slate-800/80 leading-relaxed animate-fade-up" style="animation-delay: 0.2s;">
          A mix of current projects, client work, and past ventures. I believe in building things that solve real problems.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Current Projects - Dark Anchor -->
  <section class="py-16 lg:py-20 bg-slate-850 text-cream-100">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <div class="mb-10 animate-on-scroll">
        <p class="text-copper-400 font-semibold text-xs uppercase tracking-[0.2em] mb-3">Current</p>
        <h2 class="text-2xl md:text-3xl font-bold">What I'm working on now</h2>
      </div>
      
      <!-- Editorial Project List -->
      <div class="space-y-1">
        {currentProjects.map((project, index) => (
          project.link ? (
            <a 
              href={project.link}
              target="_blank"
              rel="noopener noreferrer"
              class="group block border-t border-cream-200/10 py-6 first:border-t-0 hover:bg-cream-100/[0.03] transition-colors animate-on-scroll"
              style={`animation-delay: ${0.1 * (index + 1)}s;`}
            >
              <div class="flex flex-col lg:flex-row lg:items-start gap-3 lg:gap-8">
                <div class="lg:w-40 flex-shrink-0 flex lg:flex-col items-center lg:items-start gap-3 lg:gap-1">
                  <span class="text-sm text-cream-200/40">{project.year}</span>
                  <span class={`px-2 py-0.5 text-xs font-semibold rounded ${
                    project.status === 'Live' || project.status === 'Active' ? 'bg-green-500/20 text-green-400' :
                    project.status === 'Building' ? 'bg-amber-500/20 text-amber-400' :
                    project.status === 'Current' ? 'bg-copper-500/20 text-copper-400' :
                    'bg-cream-200/10 text-cream-200/50'
                  }`}>
                    {project.status}
                  </span>
                </div>
                
                <div class="flex-1 min-w-0">
                  <div class="flex items-start justify-between gap-4 mb-1">
                    <div>
                      <h3 class="text-lg font-bold text-cream-100 group-hover:text-copper-400 transition-colors">
                        {project.title}
                      </h3>
                      <p class="text-sm text-cream-200/50">{project.role}</p>
                    </div>
                    <svg class="w-4 h-4 text-cream-200/30 group-hover:text-copper-400 transition-all flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </div>
                  <p class="text-cream-200/60 text-sm leading-relaxed mb-2 max-w-2xl">
                    {project.description}
                  </p>
                  <div class="flex flex-wrap gap-2">
                    {project.tags.map(tag => (
                      <span class="text-xs text-cream-200/40">{tag}</span>
                    ))}
                  </div>
                </div>
              </div>
            </a>
          ) : (
            <div 
              class="block border-t border-cream-200/10 py-6 first:border-t-0 animate-on-scroll"
              style={`animation-delay: ${0.1 * (index + 1)}s;`}
            >
              <div class="flex flex-col lg:flex-row lg:items-start gap-3 lg:gap-8">
                <div class="lg:w-40 flex-shrink-0 flex lg:flex-col items-center lg:items-start gap-3 lg:gap-1">
                  <span class="text-sm text-cream-200/40">{project.year}</span>
                  <span class={`px-2 py-0.5 text-xs font-semibold rounded ${
                    project.status === 'Live' || project.status === 'Active' ? 'bg-green-500/20 text-green-400' :
                    project.status === 'Building' ? 'bg-amber-500/20 text-amber-400' :
                    project.status === 'Current' ? 'bg-copper-500/20 text-copper-400' :
                    'bg-cream-200/10 text-cream-200/50'
                  }`}>
                    {project.status}
                  </span>
                </div>
                
                <div class="flex-1 min-w-0">
                  <h3 class="text-lg font-bold text-cream-100 mb-1">
                    {project.title}
                  </h3>
                  <p class="text-sm text-cream-200/50 mb-1">{project.role}</p>
                  <p class="text-cream-200/60 text-sm leading-relaxed mb-2 max-w-2xl">
                    {project.description}
                  </p>
                  <div class="flex flex-wrap gap-2">
                    {project.tags.map(tag => (
                      <span class="text-xs text-cream-200/40">{tag}</span>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          )
        ))}
      </div>
    </div>
  </section>
  
  <!-- Past Projects -->
  <section class="py-16 lg:py-20 bg-cream-200 border-y border-cream-300">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <div class="mb-10 animate-on-scroll">
        <p class="text-copper-600 font-semibold text-xs uppercase tracking-[0.2em] mb-3">Past Ventures</p>
        <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-3">Successful exits & past work</h2>
        <p class="text-slate-800/70 max-w-2xl">
          Over the years, I've built and successfully exited several web properties. Each taught me something valuable.
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-6">
        {pastProjects.map((project, index) => (
          <div 
            class="bg-cream-100 rounded-lg p-6 border border-cream-300 animate-on-scroll"
            style={`animation-delay: ${0.1 * (index + 1)}s;`}
          >
            <div class="flex items-center justify-between mb-3">
              <span class="text-xs font-bold uppercase tracking-[0.15em] text-copper-600">
                {project.outcome}
              </span>
              <span class="text-sm text-slate-800/40">{project.year}</span>
            </div>
            <h3 class="font-bold text-slate-900 mb-2">
              {project.title}
            </h3>
            <p class="text-sm text-slate-800/70 leading-relaxed">
              {project.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Skills & Approach -->
  <section class="py-16 lg:py-20 bg-cream-100">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <div class="animate-on-scroll">
          <p class="text-copper-600 font-semibold text-xs uppercase tracking-[0.2em] mb-3">Approach</p>
          <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-5">How I work</h2>
          <div class="space-y-4 text-slate-800/80 leading-relaxed">
            <p>
              I approach every project with a focus on sustainable results. Quick wins are great, but I'm more interested in building foundations that compound over time.
            </p>
            <p>
              Whether it's SEO, marketing strategy, or product development, I believe in data-informed decisions backed by real-world testing.
            </p>
            <p>
              I'm comfortable working independently or as part of a team, remotely or on-site. Clear communication and consistent delivery matter more than formalities.
            </p>
          </div>
        </div>
        
        <div class="animate-on-scroll" style="animation-delay: 0.1s;">
          <p class="text-copper-600 font-semibold text-xs uppercase tracking-[0.2em] mb-3">Expertise</p>
          <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-5">Core skills</h2>
          <div class="grid grid-cols-2 gap-3">
            <div class="bg-cream-200 rounded-lg p-4 border border-cream-300">
              <p class="font-bold text-slate-900 text-sm mb-0.5">SEO Strategy</p>
              <p class="text-xs text-slate-800/60">Technical & Content</p>
            </div>
            <div class="bg-cream-200 rounded-lg p-4 border border-cream-300">
              <p class="font-bold text-slate-900 text-sm mb-0.5">Digital Marketing</p>
              <p class="text-xs text-slate-800/60">Full Funnel</p>
            </div>
            <div class="bg-cream-200 rounded-lg p-4 border border-cream-300">
              <p class="font-bold text-slate-900 text-sm mb-0.5">Content Strategy</p>
              <p class="text-xs text-slate-800/60">Planning & Execution</p>
            </div>
            <div class="bg-cream-200 rounded-lg p-4 border border-cream-300">
              <p class="font-bold text-slate-900 text-sm mb-0.5">AI & Automation</p>
              <p class="text-xs text-slate-800/60">Workflows & Tools</p>
            </div>
            <div class="bg-cream-200 rounded-lg p-4 border border-cream-300">
              <p class="font-bold text-slate-900 text-sm mb-0.5">Analytics</p>
              <p class="text-xs text-slate-800/60">GA4 & GSC</p>
            </div>
            <div class="bg-cream-200 rounded-lg p-4 border border-cream-300">
              <p class="font-bold text-slate-900 text-sm mb-0.5">WordPress</p>
              <p class="text-xs text-slate-800/60">Dev & Optimization</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="py-16 lg:py-20 bg-slate-850 text-cream-100">
    <div class="max-w-3xl mx-auto px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4 animate-on-scroll">
        Have a project in mind?
      </h2>
      <p class="text-cream-200/60 mb-8 animate-on-scroll" style="animation-delay: 0.1s;">
        I'm always interested in hearing about new opportunities.
      </p>
      <div class="flex flex-wrap justify-center gap-4 animate-on-scroll" style="animation-delay: 0.2s;">
        <a 
          href="/contact" 
          class="inline-flex items-center gap-2 px-6 py-3.5 bg-copper-500 text-cream-100 font-semibold rounded-lg hover:bg-copper-400 transition-all duration-300"
        >
          Let's talk
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a 
          href="https://wa.me/919409469399" 
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3.5 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-500 transition-all duration-300"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          WhatsApp
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
