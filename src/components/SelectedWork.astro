];
---

<section class="py-20 lg:py-28 bg-slate-850 text-cream-100">
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <!-- Section Header -->
    <div class="max-w-2xl mb-14 animate-on-scroll">
      <p class="text-copper-400 font-semibold text-xs uppercase tracking-[0.2em] mb-3">Selected Work</p>
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-cream-100 mb-4 leading-tight">
        Projects I've built & contributed to
      </h2>
      <p class="text-cream-200/60 leading-relaxed">
        A selection of recent work—from SaaS products to SEO consulting roles.
      </p>
    </div>
    
    <!-- Editorial Project List -->
    <div class="space-y-1">
      {projects.map((project, index) => (
        <a 
          href={project.link}
          target="_blank"
          rel="noopener noreferrer"
          class="group block border-t border-cream-200/10 py-8 first:border-t-0 hover:bg-cream-100/[0.02] transition-colors animate-on-scroll"
          style={`animation-delay: ${0.1 * (index + 1)}s;`}
        >
          <div class="flex flex-col lg:flex-row lg:items-start gap-4 lg:gap-8">
            <!-- Left: Meta -->
            <div class="lg:w-48 flex-shrink-0 flex lg:flex-col items-center lg:items-start gap-3 lg:gap-2">
              <span class="text-sm text-cream-200/40 font-medium">{project.year}</span>
              <span class={`px-2.5 py-1 text-xs font-semibold rounded ${
                project.status === 'Live' ? 'bg-green-500/20 text-green-400' :
                project.status === 'Building' ? 'bg-amber-500/20 text-amber-400' :
                project.status === 'Current' ? 'bg-copper-500/20 text-copper-400' :
                'bg-cream-200/10 text-cream-200/50'
              }`}>
                {project.status}
              </span>
            </div>
            
            <!-- Center: Main Content -->
            <div class="flex-1 min-w-0">
              <div class="flex items-start justify-between gap-4 mb-2">
                <div>
                  <h3 class="text-xl font-bold text-cream-100 group-hover:text-copper-400 transition-colors">
                    {project.title}
                  </h3>
                  <p class="text-sm text-cream-200/50">{project.role}</p>
                </div>
                <svg class="w-5 h-5 text-cream-200/30 group-hover:text-copper-400 transition-all group-hover:translate-x-0.5 group-hover:-translate-y-0.5 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </div>
              <p class="text-cream-200/60 leading-relaxed mb-3 max-w-2xl">
                {project.description}
              </p>
              <div class="flex flex-wrap gap-2">
                {project.tags.map(tag => (
                  <span class="text-xs font-medium text-cream-200/40">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
    
    <!-- View All Link -->
    <div class="mt-10 pt-8 border-t border-cream-200/10 animate-on-scroll" style="animation-delay: 0.5s;">
      <a 
        href="/work/" 
        class="inline-flex items-center gap-2 text-copper-400 font-semibold hover:text-copper-300 transition-colors"
      >
        View all work
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
