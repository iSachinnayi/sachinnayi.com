<!-- Hero with photo integration -->
<section class="relative overflow-hidden min-h-screen flex flex-col">
  <!-- Dark gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-slate-850 to-slate-900"></div>
  
  <!-- Subtle pattern overlay -->
  <div class="absolute inset-0 opacity-[0.03]" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23ffffff%22 fill-opacity=%221%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  
  <!-- Film grain overlay for polish -->
  <div class="absolute inset-0 opacity-[0.04] pointer-events-none grain-overlay"></div>
  
  <!-- Accent glow - mobile centered, desktop left -->
  <div class="absolute top-1/3 left-1/2 -translate-x-1/2 lg:left-0 lg:top-1/2 lg:-translate-y-1/2 lg:-translate-x-1/4 w-[400px] h-[400px] lg:w-[600px] lg:h-[600px] bg-copper-500/10 lg:bg-copper-500/15 rounded-full blur-[80px] lg:blur-[100px]"></div>
  <div class="absolute bottom-1/4 right-0 w-[300px] h-[300px] lg:w-[400px] lg:h-[400px] bg-copper-500/5 lg:bg-copper-500/8 rounded-full blur-[60px] lg:blur-[80px]"></div>
  
  <!-- Content -->
  <div class="relative flex-1 flex items-center pt-20 pb-6 sm:pt-24 sm:pb-10 lg:pt-28 lg:pb-20">
    <div class="max-w-7xl mx-auto px-5 sm:px-6 lg:px-8 w-full">
      <div class="grid lg:grid-cols-2 gap-6 sm:gap-8 lg:gap-16 items-center">
        
        <!-- Photo: Second on mobile, First on desktop (left side) -->
        <div class="order-2 lg:order-1 flex justify-center lg:justify-start animate-fade-up" style="animation-delay: 0.25s;">
          <div class="relative">
            <!-- Decorative frame elements - smaller on mobile -->
            <div class="absolute -top-3 -right-3 sm:-top-4 sm:-right-4 w-14 h-14 sm:w-20 sm:h-20 border-t-2 border-r-2 border-copper-500/40 sm:border-copper-500/50 rounded-tr-lg"></div>
            <div class="absolute -bottom-3 -left-3 sm:-bottom-4 sm:-left-4 w-14 h-14 sm:w-20 sm:h-20 border-b-2 border-l-2 border-copper-500/40 sm:border-copper-500/50 rounded-bl-lg"></div>
            
            <!-- Photo container with blend effects -->
            <div class="relative hero-photo-container">
              <!-- Soft glow behind photo -->
              <div class="absolute inset-0 bg-gradient-to-br from-copper-500/15 sm:from-copper-500/20 to-slate-800/50 rounded-xl blur-xl scale-105"></div>
              
              <!-- Main photo wrapper -->
              <div class="relative rounded-xl overflow-hidden shadow-2xl shadow-slate-950/50">
                <img 
                  src="/images/sachin-hero.jpg.png" 
                  alt="Sachin Nayi â€” SEO Specialist & Digital Marketer from Kadi, Gujarat, India"
                  class="w-full max-w-[260px] sm:max-w-[320px] md:max-w-[360px] lg:max-w-[400px] xl:max-w-[440px] h-auto object-cover"
                  loading="eager"
                  fetchpriority="high"
                />
                
                <!-- Gradient overlay for blending -->
                <div class="absolute inset-0 bg-gradient-to-t from-slate-900/40 sm:from-slate-900/50 via-transparent to-transparent"></div>
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-transparent to-slate-900/30 lg:block hidden"></div>
                
                <!-- Grain overlay on photo -->
                <div class="absolute inset-0 opacity-[0.05] sm:opacity-[0.06] pointer-events-none grain-overlay"></div>
                
                <!-- Subtle vignette -->
                <div class="absolute inset-0 shadow-[inset_0_0_40px_rgba(15,23,42,0.25)] sm:shadow-[inset_0_0_60px_rgba(15,23,42,0.3)]"></div>
              </div>
              
              <!-- Floating accent line -->
              <div class="absolute -bottom-1.5 sm:-bottom-2 left-1/2 -translate-x-1/2 w-1/2 h-0.5 bg-gradient-to-r from-transparent via-copper-500/40 sm:via-copper-500/50 to-transparent rounded-full"></div>
            </div>
          </div>
        </div>
        
        <!-- Text: First on mobile, Second on desktop (right side) -->
        <div class="order-1 lg:order-2">
          <div class="relative max-w-xl lg:max-w-none text-center sm:text-left">
            <!-- Decorative corner accent for desktop -->
            <div class="hidden lg:block absolute -top-6 -right-6 w-16 h-16 border-t-2 border-r-2 border-copper-500/30 rounded-tr-lg"></div>
            
            <!-- Currently Building Badge -->
            <div class="inline-flex items-center gap-1.5 sm:gap-2 px-2.5 sm:px-3 py-1 sm:py-1.5 bg-amber-500/10 border border-amber-500/20 rounded-full mb-4 sm:mb-5 animate-fade-up">
              <span class="relative flex h-1.5 w-1.5 sm:h-2 sm:w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-amber-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-1.5 w-1.5 sm:h-2 sm:w-2 bg-amber-500"></span>
              </span>
              <span class="text-[10px] sm:text-xs font-medium text-amber-200/90 tracking-wide">Currently building NoAutoRenew.com</span>
            </div>
            
            <!-- Elegant line accent with label -->
            <div class="flex items-center justify-center sm:justify-start gap-2 sm:gap-3 mb-3 sm:mb-4 animate-fade-up" style="animation-delay: 0.05s;">
              <div class="h-px w-6 sm:w-10 bg-copper-500"></div>
              <span class="text-[10px] sm:text-xs font-semibold text-copper-400 uppercase tracking-[0.15em] sm:tracking-[0.2em]">SEO Specialist</span>
              <div class="h-px w-6 sm:flex-1 sm:max-w-16 bg-gradient-to-r from-copper-500/50 to-transparent"></div>
            </div>
            
            <!-- Headline -->
            <h1 class="text-[2.25rem] sm:text-[2.75rem] md:text-5xl lg:text-[3.25rem] xl:text-[3.75rem] font-extrabold text-white leading-[1.05] tracking-tight mb-2 sm:mb-3 animate-fade-up" style="animation-delay: 0.1s;">
              Sachin Nayi
            </h1>
            
            <!-- Animated Role Titles -->
            <div class="h-7 sm:h-9 md:h-10 mb-4 sm:mb-5 overflow-hidden animate-fade-up" style="animation-delay: 0.15s;">
              <p class="text-lg sm:text-xl md:text-2xl lg:text-[1.6rem] text-copper-400 font-semibold role-carousel">
                <span class="role-item block">SEO Specialist</span>
                <span class="role-item block">Digital Marketer</span>
                <span class="role-item block">Co-Founder</span>
                <span class="role-item block">Product Builder</span>
                <span class="role-item block">SEO Specialist</span>
              </p>
            </div>
            
            <!-- Subheadline -->
            <p class="text-sm sm:text-base md:text-lg text-cream-200/70 leading-relaxed max-w-sm sm:max-w-md lg:max-w-lg mx-auto sm:mx-0 mb-4 sm:mb-5 animate-fade-up" style="animation-delay: 0.2s;">
              Over a decade of building web properties, scaling organic traffic, and creating digital products. 
              Co-Founder at <span class="text-cream-100 font-semibold">Mindjek Technologies LLP</span>. Based in Kadi, Gujarat, India.
            </p>
            
            <!-- Status badge -->
            <div class="inline-flex items-center gap-2 px-3 sm:px-4 py-1.5 sm:py-2 bg-white/5 backdrop-blur-sm rounded-full mb-4 sm:mb-5 animate-fade-up border border-white/10" style="animation-delay: 0.25s;">
              <span class="w-1.5 h-1.5 sm:w-2 sm:h-2 bg-green-400 rounded-full animate-pulse"></span>
              <span class="text-xs sm:text-sm font-medium text-cream-100 tracking-wide">Available for projects</span>
            </div>
            
            <!-- CTAs - Mobile optimized -->
            <div class="flex flex-wrap justify-center sm:justify-start gap-2 sm:gap-3 animate-fade-up" style="animation-delay: 0.3s;">
              <a 
                href="/work/" 
                class="group inline-flex items-center gap-2 px-4 sm:px-5 py-2.5 sm:py-3 bg-copper-500 text-white text-sm sm:text-base font-semibold rounded-lg hover:bg-copper-400 transition-all duration-300 hover:shadow-lg hover:shadow-copper-500/25"
              >
                View Work
                <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
              <a 
                href="https://wa.me/919409469399"
                target="_blank"
                rel="noopener noreferrer" 
                class="group inline-flex items-center gap-2 px-4 sm:px-5 py-2.5 sm:py-3 bg-green-600 text-white text-sm sm:text-base font-semibold rounded-lg hover:bg-green-500 transition-all duration-300"
              >
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
                WhatsApp
              </a>
              <a 
                href="/contact/" 
                class="group inline-flex items-center gap-2 px-4 sm:px-5 py-2.5 sm:py-3 border border-white/20 sm:border-2 text-white text-sm sm:text-base font-semibold rounded-lg hover:border-white/40 hover:bg-white/5 transition-all duration-300"
              >
                Contact
              </a>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="relative pb-4 sm:pb-8 flex justify-center animate-fade-up" style="animation-delay: 0.4s;">
    <a href="#proof" class="flex flex-col items-center gap-1.5 sm:gap-2 text-cream-200/40 hover:text-copper-400 transition-colors group">
      <span class="text-[10px] sm:text-xs uppercase tracking-widest font-medium">Scroll to explore</span>
      <svg class="w-4 h-4 sm:w-5 sm:h-5 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>

<style>
  /* Film grain effect */
  .grain-overlay {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    background-repeat: repeat;
    mix-blend-mode: overlay;
  }
  
  /* Role carousel animation */
  .role-carousel {
    animation: roleSlide 8s ease-in-out infinite;
  }
  
  @keyframes roleSlide {
    0%, 20% {
      transform: translateY(0);
    }
    25%, 45% {
      transform: translateY(-20%);
    }
    50%, 70% {
      transform: translateY(-40%);
    }
    75%, 95% {
      transform: translateY(-60%);
    }
    100% {
      transform: translateY(-80%);
    }
  }
  
  .role-item {
    height: 1.75rem;
    line-height: 1.75rem;
  }
  
  @media (min-width: 640px) {
    .role-item {
      height: 2.25rem;
      line-height: 2.25rem;
    }
  }
  
  @media (min-width: 768px) {
    .role-item {
      height: 2.5rem;
      line-height: 2.5rem;
    }
  }
  
  /* Photo entrance animation - gentler on mobile */
  .hero-photo-container {
    animation: photoFloat 6s ease-in-out infinite;
  }
  
  @keyframes photoFloat {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-6px);
    }
  }
  
  @media (min-width: 640px) {
    @keyframes photoFloat {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-8px);
      }
    }
  }
  
  /* Fade up animation */
  .animate-fade-up {
    animation: fadeUp 0.6s ease-out forwards;
    opacity: 0;
  }
  
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @media (min-width: 640px) {
    @keyframes fadeUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }
</style>
