    <div class="max-w-7xl mx-auto px-5 sm:px-6 lg:px-8 w-full">
      <div class="grid lg:grid-cols-2 gap-4 lg:gap-8 items-end lg:items-center">
        
        <!-- Photo Section -->
        <div class="order-2 lg:order-1 flex justify-center lg:justify-center animate-fade-up" style="animation-delay: 0.2s;">
          <div class="relative photo-container">
            <!-- Animated particles/dots around photo -->
            <div class="particle particle-1"></div>
            <div class="particle particle-2"></div>
            <div class="particle particle-3"></div>
            <div class="particle particle-4"></div>
            <div class="particle particle-5"></div>
            
            <!-- Animated arc lines -->
            <svg class="arc-decoration" viewBox="0 0 400 400" fill="none">
              <circle cx="200" cy="200" r="180" stroke="url(#arc-gradient)" stroke-width="1" stroke-dasharray="8 12" class="arc-rotate"/>
              <circle cx="200" cy="200" r="160" stroke="url(#arc-gradient)" stroke-width="1" stroke-dasharray="4 16" class="arc-rotate-reverse"/>
              <defs>
                <linearGradient id="arc-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" stop-color="rgba(194,124,78,0.4)"/>
                  <stop offset="50%" stop-color="rgba(194,124,78,0.1)"/>
                  <stop offset="100%" stop-color="rgba(194,124,78,0.4)"/>
                </linearGradient>
              </defs>
            </svg>
            
            <!-- Photo with fade effect -->
            <div class="relative hero-photo-wrapper">
              <img 
                src="/images/Sachin Nayi.png" 
                alt="Sachin Nayi â€” SEO Specialist & Digital Marketer from Kadi, Gujarat, India"
                class="relative z-10 w-[280px] sm:w-[340px] md:w-[380px] lg:w-[420px] xl:w-[460px] h-auto object-contain"
                loading="eager"
                fetchpriority="high"
              />
              <!-- Gradient fade at bottom to blend into background -->
              <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-slate-900 via-slate-900/80 to-transparent z-20 pointer-events-none"></div>
            </div>
          </div>
        </div>
        
        <!-- Text Section -->
        <div class="order-1 lg:order-2 pb-4 lg:pb-0">
          <div class="relative max-w-xl lg:max-w-none text-center lg:text-left">
            
            <!-- Currently Building Badge -->
            <div class="inline-flex items-center gap-1.5 sm:gap-2 px-2.5 sm:px-3 py-1 sm:py-1.5 bg-amber-500/10 border border-amber-500/20 rounded-full mb-4 sm:mb-5 animate-fade-up">
              <span class="relative flex h-1.5 w-1.5 sm:h-2 sm:w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-amber-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-1.5 w-1.5 sm:h-2 sm:w-2 bg-amber-500"></span>
              </span>
              <span class="text-[10px] sm:text-xs font-medium text-amber-200/90 tracking-wide">Currently building NoAutoRenew.com</span>
            </div>
            
            <!-- Label -->
