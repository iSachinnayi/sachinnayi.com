</section>

<style>
  /* Film grain effect */
  .grain-overlay {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    background-repeat: repeat;
    mix-blend-mode: overlay;
  }
  
  /* Photo container */
  .photo-container {
    position: relative;
  }
  
  /* Photo wrapper with float animation */
  .hero-photo-wrapper {
    animation: heroFloat 5s ease-in-out infinite;
  }
  
  @keyframes heroFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-12px); }
  }
  
  /* Arc decoration SVG */
  .arc-decoration {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120%;
    height: 120%;
    pointer-events: none;
    opacity: 0.6;
  }
  
  .arc-rotate {
    animation: arcRotate 25s linear infinite;
    transform-origin: center;
  }
  
  .arc-rotate-reverse {
    animation: arcRotate 35s linear infinite reverse;
    transform-origin: center;
  }
  
  @keyframes arcRotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  /* Floating particles */
  .particle {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
    animation: particleFloat 4s ease-in-out infinite;
  }
  
  .particle-1 {
    width: 6px;
    height: 6px;
    background: rgba(194, 124, 78, 0.8);
    top: 10%;
    right: 5%;
    animation-delay: 0s;
  }
  
  .particle-2 {
    width: 4px;
    height: 4px;
    background: rgba(245, 158, 11, 0.7);
    top: 25%;
    right: -5%;
    animation-delay: 0.8s;
  }
  
  .particle-3 {
    width: 5px;
    height: 5px;
    background: rgba(194, 124, 78, 0.6);
    bottom: 30%;
    left: 0%;
    animation-delay: 1.6s;
  }
  
  .particle-4 {
    width: 3px;
    height: 3px;
    background: rgba(245, 158, 11, 0.8);
    top: 40%;
    left: -8%;
    animation-delay: 2.4s;
  }
  
  .particle-5 {
    width: 4px;
    height: 4px;
    background: rgba(194, 124, 78, 0.7);
    bottom: 45%;
    right: -3%;
    animation-delay: 3.2s;
  }
  
  @keyframes particleFloat {
    0%, 100% {
      transform: translateY(0) scale(1);
      opacity: 0.6;
    }
    50% {
      transform: translateY(-20px) scale(1.2);
      opacity: 1;
    }
  }
  
  /* Glow pulse */
  .animate-glow-pulse {
    animation: glowPulse 4s ease-in-out infinite;
  }
  
  @keyframes glowPulse {
    0%, 100% { opacity: 0.15; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 0.25; transform: translate(-50%, -50%) scale(1.05); }
  }
  
  /* Role carousel */
  .role-carousel {
    animation: roleSlide 8s ease-in-out infinite;
  }
  
  @keyframes roleSlide {
    0%, 20% { transform: translateY(0); }
    25%, 45% { transform: translateY(-20%); }
    50%, 70% { transform: translateY(-40%); }
    75%, 95% { transform: translateY(-60%); }
    100% { transform: translateY(-80%); }
  }
  
  .role-item {
    height: 2rem;
    line-height: 2rem;
  }
  
  @media (min-width: 640px) {
    .role-item {
      height: 2.5rem;
      line-height: 2.5rem;
    }
  }
  
  @media (min-width: 768px) {
    .role-item {
      height: 2.75rem;
      line-height: 2.75rem;
    }
  }
  
  /* Fade up */
  .animate-fade-up {
    animation: fadeUp 0.6s ease-out forwards;
    opacity: 0;
  }
  
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
