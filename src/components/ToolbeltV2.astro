<section class="py-20 lg:py-28 bg-slate-850 text-cream-100">
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <!-- Section Header -->
    <div class="max-w-2xl mb-12 animate-on-scroll">
      <p class="text-copper-400 font-semibold text-xs uppercase tracking-[0.2em] mb-3">Toolbelt</p>
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4 leading-tight">
        Tools I work with
      </h2>
      <p class="text-cream-200/60 leading-relaxed">
        A curated mix of industry-standard tools and cutting-edge AI.
      </p>
    </div>
    
    <!-- Category Tabs -->
    <div class="flex flex-wrap gap-2 mb-10 animate-on-scroll" style="animation-delay: 0.1s;">
      {categories.map((cat, index) => (
        <button 
          data-category={cat.id}
          class={`tool-filter px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 ${
            index === 0 
              ? 'bg-copper-500 text-cream-100' 
              : 'bg-slate-900/50 text-cream-200/60 hover:text-cream-100 border border-cream-200/10'
          }`}
        >
          {cat.label}
        </button>
      ))}
    </div>
    
    <!-- Tools Grid -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-4 animate-on-scroll" style="animation-delay: 0.2s;">
      {tools.map((tool) => (
        <div 
          data-tool-category={tool.category}
          class="tool-item group bg-slate-900/40 rounded-lg p-4 border border-cream-200/5 hover:border-copper-500/30 transition-all duration-200 text-center"
        >
          <div class="w-10 h-10 mx-auto mb-3 rounded-lg bg-cream-200/5 flex items-center justify-center group-hover:bg-copper-500/20 transition-colors">
            <div class="w-5 h-5 text-cream-200/50 group-hover:text-copper-400 transition-colors" set:html={tool.icon}></div>
          </div>
          <span class="text-sm font-medium text-cream-200/70 group-hover:text-cream-100 transition-colors">
            {tool.name}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  const filterBtns = document.querySelectorAll('.tool-filter');
  const toolItems = document.querySelectorAll('.tool-item');
  
  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const category = btn.getAttribute('data-category');
      
      filterBtns.forEach(b => {
        b.classList.remove('bg-copper-500', 'text-cream-100');
        b.classList.add('bg-slate-900/50', 'text-cream-200/60');
      });
      btn.classList.remove('bg-slate-900/50', 'text-cream-200/60');
      btn.classList.add('bg-copper-500', 'text-cream-100');
      
      toolItems.forEach(item => {
        const itemCategory = item.getAttribute('data-tool-category');
        if (category === 'all' || itemCategory === category) {
          item.style.display = 'block';
        } else {
          item.style.display = 'none';
        }
      });
    });
  });
</script>
